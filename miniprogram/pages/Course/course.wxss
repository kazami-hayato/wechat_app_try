/* miniprogram/pages/Course/course.wxss */
.page-container{
    width: 100%;
    justify-content: center;
    display: block;
}
.header{
    width: 100%;
    box-shadow: 0 0.06rem 0.04rem 0.05rem rgba(218,225,230,.5);
    justify-content: center;
    display: flex;
}
.head-container{
    margin-top: 1rem;
    width: 90%;
    justify-content: space-between;
    display: flex;
}
.item-top{
    display: flex;
    justify-content: center;
}
.top-ico{
    width: 2rem;
    height: 2rem;
}
.top-text{
    font-size: medium;
    text-align: center;
    /*height: 2rem;*/
    line-height: 2rem;
    margin-left: 0.3rem;
}
.item-bottom{
    width: 100%;
    height: 1rem;
    font-size: 0.8rem;

}
.bottom-text{
    color: black;
    text-align: center;
    line-height: 0.8rem;
}

/*course-list*/

#course {
    text-align: left;
    width: 90%;
    font-size: medium;
    font-weight: 800;
    margin-top: 0.5rem;
}

.list-view {
    width: 100%;
    margin: 0.5rem auto 0;
    display: flex;
    justify-content: center;
}
.list-container {
    margin-top: 0.3rem;
    border-radius: .4rem;
    height: 5.5rem;
    /*margin-left: 0.3rem;*/
    width: 95%;
    text-align: center;
    color: #fff;
    font-weight: 700;
    font-size: .5rem;
    display: flex;
    justify-content: center;
    /*align-items: center;*/
    box-shadow: 0 0.1rem 0.2rem 0.14rem rgba(218, 225, 230, .7);
    /*background: rgba(137, 77, 255, .8);*/
}

.course-content {
    width: 90%;
    font-weight: 400;
}

.course-header {
    line-height: 2rem;
    display: flex;
    font-size: 1rem;
    text-align: left;
    /*justify-content: center;*/
    color: black;
    font-weight: 700;
    font-family: tahoma, arial, Hiragino Sans GB, 微软雅黑, simsun, sans-serif;
}

.course-middle {
    display: flex;
    justify-content: space-between;
}

.course-footer {
    margin-top: 0.3rem;
    display: flex;
    justify-content: space-between;
}

.course-detail {
    border-radius: 1rem;
    width: 28%;
    padding: 0 .3rem;
    /*height: 1rem;*/
    /*margin:  auto;*/
    font-size: 0.6rem;
    /*background: #894dff;*/
}

.exam-time {
    color: #919699;
    text-align: left;
    font-size: 0.6rem;
    line-height: 1rem;
}

.exam-btn {
    background: #3af;
    float: right;
    border-radius: 1rem;
    width: 4rem;
    height: 1.4rem;
    line-height: 1.5rem;

}

.detail-one {
    color: #f39330;
    border: .1rem solid #f39330;
}

.detail-two {
    color: #ff5433;
    border: .1rem solid #ff5433;
}

.detail-three {
    background: #f39330;
    color: #fff;
    border: .026667rem solid #f39330;
}
