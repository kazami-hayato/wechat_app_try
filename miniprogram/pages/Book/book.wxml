<!--favorite.wxml-->
<view class="container">
    <view style="width:80%;margin-top:1rem;">
        <mp-searchbar bindselectresult="selectResult" search="{{search}}" style="width:100%;"></mp-searchbar>
    </view>
    <view class="heading">
        <text class="heading-text">分类</text>
    </view>
    <view class="vertical-container" style="margin-top:2rem">
        <scroll-view scroll-y class="vertical-scroll" bindscrolltoupper="upper"
                bindscrolltolower="lower" bindscroll="scroll"
                scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">

            <view style="width:100%;height:80%;padding-top:0.2rem;">
                <view wx:for="{{recommend}}" wx:key="*this" class="vertical-item">
                    <view class="category-board">
                        <image src="{{item.src}}" class="category-image"></image>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>
