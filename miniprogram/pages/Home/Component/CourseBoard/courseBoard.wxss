/* pages/Home/Component/CourseBoard/courseBoard.wxss */

/*course*/
#course {
    text-align: left;
    width: 90%;
    font-size: 1rem;
    font-weight: 800;
    margin-top: 0.5rem;
}

.list-view {
    width: 100%;
    margin: 0.5rem auto 0;
    display: block;
    justify-content: center;
}
.list-course{
    width: 100%;
    display: flex;
    justify-content: center;
}

.course-container {
    margin-top: 0.3rem;
    border-radius: .4rem;
    height: 5.5rem;
    /*margin-left: 0.3rem;*/
    width: 95%;
    text-align: center;
    color: #fff;
    font-weight: 700;
    font-size: .5rem;
    display: flex;
    justify-content: center;
    /*align-items: center;*/
    box-shadow: 0 0.1rem 0.2rem 0.14rem rgba(218, 225, 230, .7);
    /*background: rgba(137, 77, 255, .8);*/
}

.course-content {
    width: 90%;
    font-weight: 400;
}

.course-header {
    line-height: 2rem;
    display: flex;
    font-size: 1rem;
    text-align: left;
    /*justify-content: center;*/
    color: black;
    font-weight: 700;
    font-family: tahoma, arial, Hiragino Sans GB, 微软雅黑, simsun, sans-serif;
}

.course-middle {
    display: flex;
    justify-content: space-between;
}

.course-footer {
    margin-top: 0.3rem;
    display: flex;
    justify-content: space-between;
}

.course-detail {
    border-radius: 1rem;
    width: 28%;
    padding: 0 .3rem;
    /*height: 1rem;*/
    /*margin:  auto;*/
    font-size: 0.6rem;
    /*background: #894dff;*/
}

.exam-time {
    color: #919699;
    text-align: left;
    font-size: 0.6rem;
    line-height: 1rem;
}

.exam-btn {
    background: #3af;
    float: right;
    border-radius: 1rem;
    width: 4rem;
    height: 1.4rem;
    line-height: 1.5rem;

}

.detail-one {
    color: #f39330;
    border: .1rem solid #f39330;
}

.detail-two {
    color: #ff5433;
    border: .1rem solid #ff5433;
}

.detail-three {
    background: #f39330;
    color: #fff;
    border: .026667rem solid #f39330;
}


.footer {
    height: 1rem;
}

/*detail-board*/
.course-detail-container{
    display: flex;
    justify-content: center;
}
.detail-content{
    padding-left: 1rem;
    width: 80%;
    border-bottom: .026667rem solid #e6edf2;
    box-shadow: 0 0.1rem 0.2rem 0.07rem rgba(218, 225, 230, .7);
}
.detail-course-item{
    margin-top: 1rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    /*justify-content: center;*/
}
.type-text{
    padding-left: 0.2rem;
    font-size: 1rem;
    line-height: 1.5rem;
}
.item-ico{
    width: 2rem;
    height: 2rem;
}
.board-hidden{
    width: 0%;
    height: 0%;
    display: none;
}
