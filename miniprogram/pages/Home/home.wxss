@import "../../components/weui-wxss/dist/style/weui.wxss";

page {
    background-color: #fff;
    height: 100%;
}

.container {
    height: 100%;
    width: 100%;
}
.vertical-container{
    width: 100%;
    height: 100%;
}
.vertical-scroll{
    width: 100%;
    height: 100%;
}
.vertical-item{
    height: 6rem;
    width: 80%;
    display: flex;
    margin: 0 auto;
    margin-top: 1rem;
    border-radius: 1rem;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}


.left-board{
    width: 40%;
    height: 6rem;
}
.right-board{
    width: 60%;
    height: 6rem;
    margin-left: 1rem;
}

.right-image{
    width: 100%;
    height: 100%;
    background-size: cover;

}
.special-heading {
    margin-top: 4rem;
    margin-bottom: 1rem;
    width: 100%;
    height: 5%;
    float: left;
}

.special-text {
    color: #161C2B;
    font-weight: Bold;
    font-family: Microsoft YaHei UI Light,sans-serif,Arial;
    margin-left: 3rem;
}
.heading {
    margin-top: 1rem;
    width: 100%;
    height: 5%;
    float: left;
}

.heading-text {
    color: #161C2B;
    font-weight: Bold;
    font-family: Microsoft YaHei UI Light,sans-serif,Arial;
    margin-left: 3rem;
}

.scroll-container {
    width: 100%;
    height: 14rem;
}

.scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.scroll-view-item {
    width: 65%;
    height: 100%;
    display: inline-block;
    margin: 0 auto;
    margin-left: 1.5rem;
    display: inline-block;
}

.image-item {
    height: 100% !important;
    width: 100% !important;
    border-radius: 2rem;
    background-size: cover;
}
.img-title{
    position: relative;
    margin-top: -3rem;
    font-size: x-large;
    color: #FFF;
    margin-left: 1rem;
    letter-spacing: 0.1rem;
    font-weight: Bold;
    font-family: Microsoft YaHei UI Light,sans-serif,Arial;
    height: 2rem;
    width: auto;
}

.image-item::after {
    display: block;
    position: relative;
    margin-top: -150px;
    height: 100%;
    width: 100%;
    content: '';
    background-image: linear-gradient( to bottom, rgba(255, 255, 255, 0) 0, rgba(245, 101, 101, 0.84) 88.64%);

}
.scroll-view-item:first-of-type {
    margin-left:3rem;
}

.vertical-item:first-of-type{
 margin-top:3rem;
}




