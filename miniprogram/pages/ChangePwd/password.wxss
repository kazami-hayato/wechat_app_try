.password-container{
    width: 100%;
}
.info-panel{
    width: 90%;
}
.btn-container{
    margin-top: 1rem;
    width: 100%;
    justify-content: center;
    display: flex;
}
.btn-content{
    width: 100%;
    height: 2rem;
    display: flex;
    justify-content: center;
    margin-top: 1rem;
}
.display-content{
    width: 90%;
}
.btn{
    display: block;
    margin: 0;
    padding: .453333rem .426667rem;
    width: 100%;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    line-height: 1;
    color: #fff;
    background: #4a4c5b;
    outline: none;
    border: none;
    border-radius: .053333rem;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
    font-size: 1rem;

}
