page {
    background-color: #fff;
    height: 100%;
}

.container {
    height: 100%;
    width: 100%;
}

.top-container {
    height: 12rem;
    width: 100%;
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font-weight: 400;
    vertical-align: baseline;
}

.top-board {
    height: 10rem;
    background: #33aaff;
    border-bottom-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
    border-bottom: .1rem solid #919699;
    margin: 0 auto;
    display: flex;
}

.top-avatar-container {
    justify-content: center;
    display: flex;
}

.avatar-container {
    margin-top: -2rem;
    width: 4rem;
    height: 4rem;
    padding: .06rem;
    border: .1rem solid rgba(218, 225, 230, .4);
    border-radius: 4rem;
    background: #fff;
    object-fit: cover;
    max-width: 100%;
    max-height: 100%;
    justify-content: center;
    display: flex;
    background-clip: padding-box;
}

.top-avatar {
    width: 3.95rem;
    height: 3.95rem;
    border-radius: 3.95rem;
    margin-top: 0.05rem;
    /*background: #fff;*/
    background-size: cover;
}

/*middle-container*/
.middle-container {
    margin-top: 2rem;
    width: 90%;
    height: 16rem;
    box-shadow: 0 0.02rem 0.2rem 0.05rem rgba(218,225,230,.4);
    border-radius: .5rem;
    justify-content: center;
    display: flex;
}
.middle-content{
    height: 100%;
    width: 90%;
    padding-top: 1rem;
    padding-left: 2rem;
}
.item-container {
    margin-top: 1rem;
    width: 90%;
    height: 2rem;
    justify-content: space-between;
    display: flex;
    border-bottom: .07rem solid #e6edf2;
}

.middle-item {
    width: inherit;
    height: inherit;
    /*justify-content: space-between;*/
    /*display: flex;*/
    line-height: 2rem;

}

.item-logo {
    width: 1.5rem;
    height: 1.5rem;
}
.middle-text{
    /*margin-bottom: 1rem;*/
    margin-left: 0.7rem;
    min-width: 100%;
    width: 90%;
    /*line-height: 1rem;*/
    font-size: 1.4rem;
    color: #000;
    position: relative;
    bottom: 0.2rem;
}
.right-icon {
    width: 1.5rem;
    height: 1.5rem;
    float: right;
    margin-right: -2rem;
}

