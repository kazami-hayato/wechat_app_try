<!--favorite.wxml-->
<view class="container">
    <view class="vertical-container">
        <scroll-view scroll-y class="vertical-scroll" bindscrolltoupper="upper"
                bindscrolltolower="lower" bindscroll="scroll"
                scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
            <view class="heading">
                <view style="width:100%;display:flex;height:100%;">
                    <text class="heading-text" style="min-width:55%;">排序</text>
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" style="min-width:30%;display:flex;">
                        <view class="picker" style="border-style:inset;border-width:1px;padding-left:1rem">
                            <text style="vertical-align:middle;">  {{array[index]}}</text>
                            <icon type="download" size="{{15}}" color="#161C2B"/>
                        </view>


                    </picker>
                </view>
            </view>
            <view style="width:100%;height:100%;padding-top:0.2rem;">
                <view wx:for="{{recommend}}" wx:key="*this" class="vertical-item">
                    <view class="left-board">
                        <image src="{{item.src}}" class="right-image"></image>
                    </view>
                    <view class="right-board">
                        <view style="display:flex;padding-top:0.3rem;width:100%;height:auto;">
                            <text style="min-width:60%;">小龙虾</text>
                            <view style="float:right;width:auto;">
                                <mp-icon type="outline" icon="time" color="#828282" size="{{15}}" style="vertical-align:middle;"></mp-icon>
                                <text class="special-date-text" style="vertical-align:middle;margin-left:0.2rem;">2 天前</text>
                            </view>
                        </view>
                        <view>
                            <text class="special-desc">
                            小龙虾要慢慢做
                            </text>
                        </view>

                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>
