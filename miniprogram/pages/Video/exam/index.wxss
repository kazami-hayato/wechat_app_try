/* pages/Video/exam/index.wxss */
.container{
    display: flex;
    justify-content: center;
}
.exam-content{
    border-bottom: .026667rem solid #e6edf2;
    box-shadow: 0 0.1rem 0.2rem 0.07rem rgba(218, 225, 230, .7);
    margin-top: 1rem;
    height: 6rem;
}
.exam-header{
    display: flex;
    justify-content: space-between;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 1rem;
}
.exam-title{
    color: #000;
    font-weight: 700;
}
.exam-btn{
    background: #3af;
    border-radius: .16rem;
    color: #fff;
    width: auto;
    display: inline-block;
    vertical-align: middle;
    padding: .24rem .266667rem;
    font-size: small;
}
.state{
    color: #ff5433;
    border: .09667rem solid #ff5433;
    width: 20%;
    text-align: center;
    margin-left: 1rem;
    margin-top: 1rem;
    border-radius: 1rem;
}
