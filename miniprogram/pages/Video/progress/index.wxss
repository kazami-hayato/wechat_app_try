
/*detail-board*/
.course-detail-container{
    display: flex;
    justify-content: center;
}
.detail-content{
    padding-left: 1rem;
    width: 80%;
    border-bottom: .026667rem solid #e6edf2;
    box-shadow: 0 0.1rem 0.2rem 0.07rem rgba(218, 225, 230, .7);
}
.detail-course-item{
    margin-top: 1rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    /*justify-content: center;*/
}
.type-text{
    padding-left: 0.2rem;
    font-size: 1rem;
    line-height: 1.5rem;
}
.item-ico{
    width: 2rem;
    height: 2rem;
}
.board-hidden{
    width: 0%;
    height: 0%;
    display: none;
}
