@import "../../components/weui-wxss/dist/style/weui.wxss";

page {
    background-color: #fff;
    height: 100%;
}
.container {
    height: 100%;
    width: 100%;
}
.vertical-container{
    width: 100%;
    height: 100%;
}
.vertical-scroll{
    width: 100%;
    height: 100%;
}
.vertical-item{
    height: 6rem;
    width: 80%;
    display: flex;
    margin: 0 auto;
    margin-top: 1rem;
    border-radius: 1rem;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}


.heading {
    margin-top: 2rem;
    width: 100%;
    height: 5%;
    float: left;
}

.heading-text {
    color: #161C2B;
    font-weight: Bold;
    font-family: Microsoft YaHei UI Light,sans-serif,Arial;
    margin-left: 3rem;
}

.scroll-container {
    width: 100%;
    height: 14rem;
}

.scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.scroll-view-item {
    width: 65%;
    height: 100%;
    display: inline-block;
    margin: 0 auto;
    margin-left: 1.5rem;
    display: inline-block;
}


